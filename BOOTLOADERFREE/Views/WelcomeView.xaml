<UserControl x:Class="BOOTLOADERFREE.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BOOTLOADERFREE.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding WelcomeMessage}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="{Binding ApplicationDescription}" 
                       FontSize="16" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,20"/>
            
            <Border Background="#F0F0F0" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    Padding="10" 
                    Margin="0,10,0,0">
                <TextBlock Text="Note: Cette application nÃ©cessite des droits d'administrateur pour modifier les partitions et configurer le dual boot." 
                           TextWrapping="Wrap" 
                           FontStyle="Italic"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>